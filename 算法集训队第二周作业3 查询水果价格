#include "stdio.h"
int main(){
    int n;
    printf("[1] apple\n"
           "[2] pear\n"
           "[3] orange\n"
           "[4] grape\n"
           "[0] exit\n");
    for(int i=0;i<5;i++){
        scanf("%d",&n);
        if(n==0){
            break;
        } else if(n==1){
            printf("price = 3.00");
        } else if(n==2){
            printf("price = 2.50");
        } else if(n==3){
            printf("price = 4.10");
        } else if(n== 4){
            printf("price = 10.20");
        } else{
            printf("price = 0.00");
        }
        if(i<5){
            printf("\n");
        }
    }
    return 0;
}
